    </main>
    
    <div id="modal-overlay" class="modal-overlay">
        <div id="cancel-modal" class="modal">
            <h3>Konfirmasi Penghapusan</h3>
            <p id="modal-text">Apakah Anda yakin ingin menghapus [Produk] dari keranjang?</p>
            <div class="modal-buttons">
                <button class="confirm-btn" onclick="confirmCancel()">Ya, Hapus</button>
                <button class="cancel-btn" onclick="closeModal()">Batal</button>
            </div>
        </div>
    </div>

    <div id="toast-notification" class="toast-notification"></div>

    <footer>
        <p>&copy; 2025 BINDERLAND. Hak Cipta Dilindungi.</p>
    </footer>

    <script>
        let cart = [];
        const waNumber = '6289608624923';
        const instagramLink = 'https://www.instagram.com/binderland_?igsh=MXFkemNuc3NxOGw3aQ=='; // Tautan Instagram
        
        let itemToCancelIndex = null; // Variable to store the index of the item to be cancelled

        function showSection(sectionId) {
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => section.classList.remove('active'));
            document.getElementById(sectionId + '-page').classList.add('active');

            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => link.classList.remove('active'));
            document.getElementById('nav-' + sectionId).classList.add('active');
            
            if (sectionId === 'checkout') {
                updateCheckoutSummary();
            }
        }

        function showToast(message) {
            const toast = document.getElementById('toast-notification');
            toast.innerText = message;
            toast.className = 'toast-notification show';
            setTimeout(() => {
                toast.className = toast.className.replace('show', '');
            }, 3000);
        }

        function addToCart(productName, price) {
            const existingItem = cart.find(item => item.name === productName);
            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({ name: productName, price: price, quantity: 1 });
            }
            showToast(`‚úÖ ${productName} telah ditambahkan ke keranjang.`);
            updateCart();
            document.getElementById('cart-section').classList.add('show');
        }

        // FUNGSI BARU UNTUK MENAMBAH KUANTITAS
        function increaseQuantity(index) {
            cart[index].quantity++;
            updateCart();
            showToast(`Jumlah ${cart[index].name} ditambah.`);
        }

        // FUNGSI LAMA DIUBAH MENJADI MENGURANGI KUANTITAS
        function decreaseQuantity(index) {
            const item = cart[index];
            if (item.quantity > 1) {
                item.quantity--;
                updateCart();
                showToast(`Jumlah ${item.name} dikurangi.`);
            } else {
                // Jika kuantitas sudah 1, tampilkan modal konfirmasi hapus
                itemToCancelIndex = index;
                showCancelModal(item.name);
            }
        }
        
        function showCancelModal(productName) {
            document.getElementById('modal-overlay').style.display = 'flex';
            document.getElementById('modal-text').innerText = `Apakah Anda yakin ingin menghapus ${productName} dari keranjang?`;
        }
        
        function confirmCancel() {
            if (itemToCancelIndex !== null) {
                const productName = cart[itemToCancelIndex].name;
                cart.splice(itemToCancelIndex, 1);
                updateCart();
                closeModal();
                showToast(`‚ùå ${productName} telah dihapus dari keranjang.`);
                itemToCancelIndex = null;
            }
        }
        
        function closeModal() {
            document.getElementById('modal-overlay').style.display = 'none';
            itemToCancelIndex = null; // Reset index saat modal ditutup
        }

        function updateCart() {
            const cartItemsContainer = document.getElementById('cart-items');
            const cartTotalElement = document.getElementById('cart-total');
            cartItemsContainer.innerHTML = '';
            let total = 0;

            if (cart.length === 0) {
                cartItemsContainer.innerHTML = '<p style="text-align: center; color: #888;">Keranjang belanja Anda kosong.</p>';
                document.getElementById('cart-section').classList.remove('show');
            } else {
                cart.forEach((item, index) => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'cart-item';
                    const subtotal = item.price * item.quantity;
                    itemElement.innerHTML = `
                        <div class="cart-item-info">
                            <span>${item.name}</span>
                            <div class="quantity-controls">
                                <button onclick="decreaseQuantity(${index})">‚àí </button>
                                <span>${item.quantity}</span>
                                <button onclick="increaseQuantity(${index})">+</button>
                            </div>
                        </div>
                        <span class="cart-item-subtotal">Rp ${subtotal.toLocaleString('id-ID')}</span>
                        <button class="remove-btn" onclick="decreaseQuantity(${index})">‚ùå</button>
                    `;
                    cartItemsContainer.appendChild(itemElement);
                    total += subtotal;
                });
                document.getElementById('cart-section').classList.add('show');
            }
            cartTotalElement.innerHTML = `Total: **Rp ${total.toLocaleString('id-ID')}**`;
        }
        
        function updateCheckoutSummary() {
            const checkoutItemsContainer = document.getElementById('checkout-items');
            const checkoutTotalElement = document.getElementById('checkout-total');
            checkoutItemsContainer.innerHTML = '';
            let total = 0;

            if (cart.length === 0) {
                checkoutItemsContainer.innerHTML = '<p style="text-align: center; color: var(--secondary-color); font-weight: 600;">Keranjang belanja Anda kosong. Silakan kembali ke halaman produk.</p>';
                document.getElementById('order-form').style.display = 'none';
                document.getElementById('checkout-summary').style.display = 'none';
                document.querySelector('.payment-options').style.display = 'none';
                document.querySelector('.checkout-section h2').style.display = 'none';
            } else {
                document.querySelector('.checkout-section h2').style.display = 'block';
                document.getElementById('order-form').style.display = 'block';
                document.getElementById('checkout-summary').style.display = 'block';
                document.querySelector('.payment-options').style.display = 'flex';
                cart.forEach((item) => {
                    const subtotal = item.price * item.quantity;
                    const itemElement = document.createElement('div');
                    itemElement.className = 'cart-item';
                    itemElement.innerHTML = `
                        <span>${item.name} (x${item.quantity})</span>
                        <span>Rp ${subtotal.toLocaleString('id-ID')}</span>
                    `;
                    checkoutItemsContainer.appendChild(itemElement);
                    total += subtotal;
                });
            }
            checkoutTotalElement.innerHTML = `Total: **Rp ${total.toLocaleString('id-ID')}**`;
        }

        // FUNGSI INI TETAP MENGIRIM KE WHATSAPP UNTUK SEMUA METODE
        function processOrder(paymentMethod) {
            const nama = document.getElementById('nama').value.trim();
            const telepon = document.getElementById('telepon').value.trim();
            const alamat = document.getElementById('alamat').value.trim();
            
            // Validation
            if (!nama) { showToast('Nama lengkap tidak boleh kosong.'); return; }
            if (!telepon) { showToast('Nomor telepon tidak boleh kosong.'); return; }
            if (!alamat) { showToast('Alamat tidak boleh kosong.'); return; }

            if (cart.length === 0) { showToast('Keranjang belanja Anda kosong!'); return; }
            
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            // Generate list of items with quantity and subtotal for WhatsApp message
            const listItems = cart.map(item => `- ${item.name} (x${item.quantity}) - Rp ${(item.price * item.quantity).toLocaleString('id-ID')}`).join('\n');
            
            let paymentText = '';
            if (paymentMethod === 'dana') {
                paymentText = 'DANA (Konfirmasi Pembayaran dan Transfer ke Admin)';
            } else if (paymentMethod === 'cash') {
                paymentText = 'Bayar di Tempat (Cash)';
            }

            const message = `Halo Admin BINDERLAND, saya ingin memesan produk berikut:%0A%0A*Data Pembeli:*%0A- Nama: ${nama}%0A- No. WA: ${telepon}%0A- Alamat: ${alamat}%0A%0A*Ringkasan Pesanan:*%0A${listItems}%0A%0A*Total Pembayaran:* Rp ${total.toLocaleString('id-ID')}%0A*Metode Pembayaran:* ${paymentText}%0A%0AMohon konfirmasi total pesanan dan ongkirnya. Terima kasih! üòä`;

            // Semua metode pembayaran akan diarahkan ke WhatsApp untuk konfirmasi pesanan
            const waUrl = `https://wa.me/${waNumber}?text=${message}`;
            window.open(waUrl, '_blank');
            showToast('Pesanan Anda sedang diproses dan dialihkan ke WhatsApp Admin.');
        }

        // FUNGSI BARU UNTUK KE INSTAGRAM
        function goToInstagram() {
            window.open(instagramLink, '_blank');
            showToast('Anda dialihkan ke halaman Instagram BINDERLAND üì∏');
        }

        document.addEventListener('DOMContentLoaded', () => {
            showSection('home');
            updateCart();
        });
    </script>
</body>
</html>
